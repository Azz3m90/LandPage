# FastCaisse Environment Configuration Example
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Email Configuration
ADMIN_EMAIL=contact@fastcaisse.be
COMPANY_NAME=FastCaisse
COMPANY_ADDRESS="Chauss√©e de Haecht 1749, 1130 Brussels, Belgium"

# SMTP Configuration
USE_SMTP=true
SMTP_HOST=mail.infomaniak.com
SMTP_PORT=587
SMTP_USERNAME=contact@fastcaisse.be
SMTP_PASSWORD=your_secure_password_here
SMTP_ENCRYPTION=tls

# reCAPTCHA/Turnstile Configuration
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
TURNSTILE_SECRET_KEY=your_turnstile_secret_key
TURNSTILE_SITE_KEY=your_turnstile_site_key

# Security Configuration
ENABLE_RATE_LIMITING=true
MAX_SUBMISSIONS_PER_HOUR=5
MAX_SUBMISSIONS_PER_DAY=20
